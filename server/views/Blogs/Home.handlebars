<!-- For loop demo -->
<div class="blogs-list">
  {{#if blogs.length}}
    {{#each blogs}}
      <div class="blog">
        <a href="../blogs/{{this._id}}" class="blog-title"> {{this.title}}</a>
        <p class="blog-author">{{this.author}}</p>
        <p class="text-monospace text-justify">{{this.content}}</p>
        <div class="text-right">
          <button
            class="btn btn-sm btn-danger rounded-circle p-2"
            data-doc="{{this._id}}"
          > Delete</button>
        </div>
      </div>
    {{/each}}
  {{/if}}
</div>
<script>
  let delBtns = document.querySelectorAll(".blog button"); delBtns.forEach((btn)
  => { btn.addEventListener("click",() => { const endPoint =
  `../blogs/${btn.dataset.doc}`; fetch(endPoint,{ method: 'DELETE' })
  .then((res) => res.json()).then((data) => window.location.href =
  data.redirect) .catch((err) => console.log(err)) }) })
</script>